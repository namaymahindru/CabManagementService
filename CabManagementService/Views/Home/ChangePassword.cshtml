@{

    Layout = "_LayoutUser";
}

<style>
    .container-fluid .row
    {
        margin-top:200px;
        margin-left:400px;

    }

    .button-64 {
        align-items: center;
        background-image: linear-gradient(144deg,#ffffff, #FCF55F 50%,#FFFF66);
        border: 0;
        border-radius: 8px;
        box-shadow: rgba(151, 65, 252, 0.2) 0 15px 30px -5px;
        box-sizing: border-box;
        color:dimgrey;
        display: flex;
        font-family: Phantomsans, sans-serif;
        font-size: 20px;
        justify-content: center;
        line-height: 1em;
        max-width: 100%;
        min-width: 140px;
        padding: 3px;
        text-decoration: none;
        user-select: none;
        -webkit-user-select: none;
        touch-action: manipulation;
        white-space: nowrap;
        cursor: pointer;
    }

        .button-64:active,
        .button-64:hover {
            outline: 0;
        }

        .button-64 span {
            background-color: rgb(255,255,0);
            padding: 16px 24px;
            border-radius: 6px;
            width: 100%;
            height: 100%;
            transition: 300ms;
        }

        .button-64:hover span {
            background: none;
        }
</style>

<section class="contact_section layout_padding-bottom">
    <div class="container">
       
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-5  offset-md-1">
                <div class="contact_form">
                    <span style="color:forestgreen">@TempData["msg"]</span>
                    <form asp-action="PasswordChanged" asp-controller="Home" method="post">
                        <table>
                        <input type="text" placeholder="New Password" name="Password" id="OPassword" >
                        
                         <input type="submit" value="Change" class="button-64" />
                        
                        </table>

                    </form>
                </div>
            </div>
            <div class="col-md-6 px-0">
               
            </div>
        </div>
    </div>
</section>