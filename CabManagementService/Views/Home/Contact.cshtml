        box-sizing: border-box;
        color: #FFFFFF;
        display: flex;
        font-family: Phantomsans, sans-serif;
        font-size: 20px;
        justify-content: center;
        line-height: 1em;
        max-width: 100%;
        min-width: 140px;
        padding: 3px;
        text-decoration: none;
        user-select: none;
        -webkit-user-select: none;
        touch-action: manipulation;
        white-space: nowrap;
        cursor: pointer;
    }

        .button-65 :active,
        .button-65:hover {
            outline: 0;

</style>

<section class="contact_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                Any Problems <br>
                Any Questions
            </h2>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-5  offset-md-1">
                <div class="contact_form">
                    <h4>
                        GET IN TOUCH
                    </h4>
                    <span style="color:forestgreen">@TempData["msg"]</span>
                    <form asp-action="ContactUs" asp-controller="Home" method="post">
                        <input type="text" placeholder="Name" name="Name" id="Name" asp-for="Name">
                        <input type="text" placeholder="Phone Number" name="PhoneNumber" id="PhoneNumber" asp-for="PhoneNumber">
                        <input type="text" placeholder="Message" name="Message" id="Message" asp-for="Message">
                        <input type="submit" value="Send" class="button-64"/>
                    </form>
                </div>
            </div>
            <div class="col-md-6 px-0">
                <div class="img-box">
                    <img src="images/contact-img.png" alt="">
                </div>
            </div>
        </div>
    </div>
</section>